# This file contains all aliases.

# Interactive operation...
# alias rm='rm -i'
# alias cp='cp -i'
# alias mv='mv -i'

# Default to human readable figures
alias df='df -h'
alias du='du -h'

# Misc :)
alias less='less -r'                          # raw control characters
alias whence='type -a'                        # where, of a sort
alias grep='grep --color'                     # show differences in colour
alias egrep='egrep --color=auto'              # show differences in colour
alias fgrep='fgrep --color=auto'              # show differences in colour

# Some shortcuts for different directory listings
alias ls='ls -h --color=tty'                 # classify files in colour
alias dir='ls --color=auto --format=vertical'
alias vdir='ls --color=auto --format=long'
alias ll='ls -l'                              # long list
alias la='ls -A'                              # all but . and ..
alias l='ls -CF'

alias vi='vim'
alias prolog='swipl'

# Shortcuts for Windows apps
alias subl='/cygdrive/d/Program\ Files/Sublime\ Text\ 2/sublime_text.exe'
alias eclipse='/cygdrive/d/Program\ Files/eclipse/eclipse.exe'
alias chrome='/cygdrive/c/Program\ Files\ \(x86\)/Google/Chrome/Application/chrome.exe'
alias firefox='/cygdrive/c/Program\ Files\ \(x86\)/Mozilla\ Firefox/firefox.exe'
alias foobar='/cygdrive/d/Program\ Files\ \(x86\)/foobar2000/foobar2000.exe'
alias acrobat='/cygdrive/d/Program\ Files/Adobe/Acrobat\ 10.0/Acrobat/Acrobat.exe'
alias photoshop='/cygdrive/d/Program\ Files/Adobe/Adobe\ Photoshop\ CS6\ \(64\ Bit\)/Photoshop.exe'
alias fireworks='/cygdrive/d/Program\ Files/Adobe/Adobe\ Fireworks\ CS6/Fireworks.exe'
alias dreamweaver='/cygdrive/d/Program\ Files/Adobe/Adobe\ Dreamweaver\ CS6/Dreamweaver.exe'
alias winrar='/cygdrive/d/Program\ Files/WinRAR/WinRAR.exe'
alias kugou='/cygdrive/d/Program\ Files\ \(x86\)/KuGou/KGMusic/KuGou.exe'
alias qq='/cygdrive/d/Program\ Files\ \(x86\)/Tencent/QQ/QQProtect/Bin/QQProtect.exe'
alias word='/cygdrive/c/Program\ Files\ \(x86\)/Microsoft\ Office/Office14/WINWORD.EXE'
alias powerpoint='/cygdrive/c/Program\ Files\ \(x86\)/Microsoft\ Office/Office14/POWERPNT.EXE'
alias excel='/cygdrive/c/Program\ Files\ \(x86\)/Microsoft\ Office/Office14/EXCEL.EXE'
